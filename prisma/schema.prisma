// prisma/schema.prisma



// Data source (SQLite by default, matches your DATABASE_URL in .env)
datasource db {
 generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

}

// ========== MODELS ==========

// Main Stock table used by your app
model Stock {
  id                 Int           @id @default(autoincrement())
  ticker             String        @unique
  company            String

  toneScore          Int?
  growthScore        Int?
  profitabilityScore Int?
  valuationScore     Int?
  balanceScore       Int?
  healthScore        Int?

  rating             String?
  notes              String?

  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt

  // History of analyses (transcripts & market snapshots)
  toneAnalyses       ToneAnalysis[]
}

// Historical analysis records, linked to a Stock
model ToneAnalysis {
  id              Int      @id @default(autoincrement())
  stockId         Int

  confidenceScore Int?
  finalToneScore  Int?
  summary         String?
  recommendation  String?

  createdAt       DateTime @default(now())

  // Relation back to Stock
  stock           Stock    @relation(fields: [stockId], references: [id])
}
